# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=DATABASE_URL=postgresql://postgres:12345678@localhost:5432/postgres
DATABASE_POOL_SIZE=20

# Redis
REDIS_URL=redis://localhost:6379

# Storage (S3)
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=idea-submissions
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Secrets Manager
SECRETS_MANAGER_TYPE=vault
SECRETS_MANAGER_URL=http://localhost:8200

# Virus Scanning
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# Event Bus
EVENT_BUS_TYPE=rabbitmq
EVENT_BUS_URL=amqp://localhost:5672

# Rate Limiting
UPLOAD_RATE_LIMIT=5
UPLOAD_RATE_WINDOW=3600

# File Limits
MAX_CSV_ROWS=500
MAX_MP4_SIZE=104857600  # 100MB
MAX_DOC_SIZE=104857600  # 100MB

# Presigned URL
PRESIGNED_URL_EXPIRY=900

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=60
